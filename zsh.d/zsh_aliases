# editor
alias vv='nvim'
alias vi='vim'

# command short cut
# ディレクトリ＝青、シンボリックリンク＝シアンなど
export LSCOLORS="ExFxBxDxCxegedabagacad"
alias ls='ls -G'
alias ll='ls -G -l'
alias la='ls -G -A'
alias hs='history 200'
alias cl='clear'
alias gg='git'
alias grep='grep --color=auto -n'
alias py='python3'
alias rm='trash'
alias sl='sl | lolcat'
alias fortune='fortune | lolcat'
alias cmatrix='cmatrix | lolcat'
alias jl='jupyter-lab'
alias t2='tree -L 2'
alias t3='tree -L 3'
alias t4='tree -L 4'
alias t5='tree -L 5'
alias q='exit'

# directory stack
alias dirs='dirs -v'
alias gd=pushd
alias pd=popd
alias slurp='pushd - && pushd' # ref oreilly efficiend linux command

# mv dir or edit setting shortcut
alias dot='cd ~/macdotfiles.d/'
alias zshrc='vi ~/.zshrc'
alias zalias='vv ~/.zsh_aliases'
alias Tmp='cd ~/Tmp'
alias DL='cd ~/Downloads'

# New generation command
alias ya='yazi' # fazy finder
alias ff='fzf' # fzf
alias rfd='fd' # High speed find
alias rgrep='rg' # grep
alias rcat='bat' # cat
alias rls='eza' # syntax ls
alias rcd='z' # cd
alias rdu='dust' # disk usage
alias rps='procs' # ps
alias lg='lazygit' 

# Combo
alias f='fzf --preview "bat --style=numbers --color=always {} 2>/dev/null"'
alias fh='history | fzf'
alias vf='vv $(f)'
alias ffcp='fcp $(f)'

# docker
alias dk='docker'
alias dkc='docker container'
alias dki='docker image'
alias dkv='docker volume'
alias dkn='docker network'
alias dkcmp='docker compose'


# Not yet
alias rrm='rip'


