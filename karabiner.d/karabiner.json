{
  "global": {
    "check_for_updates_on_startup": true
  },
  "profiles": [
    {
      "name": "Default profile",
      "selected": true,
      "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" },
      "simple_modifications": [],
      "parameters": {
        "basic.to_if_alone_timeout_milliseconds": 300,
        "basic.to_if_held_down_threshold_milliseconds": 120,
        "basic.to_delayed_action_delay_milliseconds": 600
      },
      "complex_modifications": {
        "rules": [
          {
            "description": "CapsLock to Ctrl/Esc",
            "manipulators": [
              {
                "type": "basic",
                "from": { "key_code": "caps_lock", "modifiers": { "optional": ["any"] } },
                "to": [ { "key_code": "left_control" } ],
                "to_if_alone": [ { "key_code": "escape" } ]
              }
            ]
          },
          {
            "description": "Prevent accidental Cmd+Q",
            "manipulators": [
              {
                "type": "basic",
                "from": { "key_code": "q", "modifiers": { "mandatory": ["command"] } },
                "to_if_alone": [],
                "to_if_held_down": [ { "key_code": "q", "modifiers": ["command"] } ]
              }
            ]
          },
          {
            "description": "Right Command alone toggles Kana/Eisu; held works as Command",
            "manipulators": [
              {
                "type": "basic",
                "from": { "key_code": "right_command", "modifiers": { "optional": ["any"] } },
                "to": [ { "key_code": "right_command" } ],
                "to_if_alone": [
                  { "set_variable": { "name": "ime_toggle", "value": 1 } },
                  { "key_code": "japanese_kana" }
                ],
                "conditions": [
                  { "type": "variable_if", "name": "ime_toggle", "value": 0 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "right_command", "modifiers": { "optional": ["any"] } },
                "to": [ { "key_code": "right_command" } ],
                "to_if_alone": [
                  { "set_variable": { "name": "ime_toggle", "value": 0 } },
                  { "key_code": "japanese_eisuu" }
                ],
                "conditions": [
                  { "type": "variable_if", "name": "ime_toggle", "value": 1 }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}
